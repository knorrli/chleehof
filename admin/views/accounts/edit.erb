<h1>Einstellungen</h1>
<% form_for :account, url(:accounts, :update, :id => @account.id), :method => :put, :class => 'form-horizontal' do |f| %>
  <div class="col-md-4">
    <h3>Barzahlungsrabatt</h3>
    <div class="form-group">
      <%= f.label :cash_discount_percentage, class: 'col-sm-5 control-label' %>
      <div class="col-sm-7">
        <div class="input-group">
          <%= f.text_field :cash_discount_percentage, class: 'form-control text-right' %>
          <span class="input-group-addon">%</span>
        </div>
      </div>
    </div>
    <h3>Mengenrabatt</h3>
    <div class="form-group">
      <%= f.label :bulk_discount_percentage, class: 'col-sm-5 control-label' %>
      <div class="col-sm-7">
        <div class="input-group">
          <%= f.text_field :bulk_discount_percentage, class: 'form-control text-right' %>
          <span class="input-group-addon">%</span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :bulk_discount_treshold, class: 'col-sm-5 control-label' %>
      <div class="col-sm-7">
        <div class="input-group">
          <%= f.text_field :bulk_discount_treshold, class: 'form-control text-right' %>
          <span class="input-group-addon">CHF</span>
        </div>
      </div>
    </div>
    <h3>FrÃ¼hlingsrabatt</h3>
    <div class="form-group">
      <%= f.label :spring_discount_active, class: 'col-sm-5 control-label' %>
      <div class="col-sm-7">
        <div class="checkbox">
          <label>
            <%= f.check_box :spring_discount_active %>
          </label>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :spring_discount_percentage, class: 'col-sm-5 control-label' %>
      <div class="col-sm-7">
        <div class="input-group">
          <%= f.text_field :spring_discount_percentage, class: 'form-control text-right' %>
          <span class="input-group-addon">%</span>
        </div>
      </div>
    </div>

    <h3>Mehrwertsteuer</h3>
    <div class="form-group">
      <%= f.label :vat_percentage, class: 'col-sm-5 control-label' %>
      <div class="col-sm-7">
        <div class="input-group">
          <%= f.text_field :vat_percentage, class: 'form-control text-right' %>
          <span class="input-group-addon">%</span>
        </div>
      </div>
    </div>

    <h3>Inventar Warnungen</h3>
    <div class="form-group">
      <%= f.label :threshold_notice, class: 'col-sm-5 control-label text-warning' %>
      <div class="col-sm-7">
        <div class="input-group">
          <%= f.text_field :threshold_notice, class: 'form-control text-right' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :threshold_warn, class: 'col-sm-5 control-label text-danger' %>
      <div class="col-sm-7">
        <div class="input-group">
          <%= f.text_field :threshold_warn, class: 'form-control text-right' %>
        </div>
      </div>
    </div>


    <div class="form-group">
      <div class="col-sm-6">
        <%= link_to pat(:cancel), url(:orders, :new), :class => 'btn btn-danger' %>
      </div>
      <div class="col-sm-6 pull-right">
        <%= f.submit pat(:save), :class => 'btn btn-primary pull-right' %>
      </div>
    </div>
  </div>
  <div class="col-md-2">
    
  </div>
<% end %>

