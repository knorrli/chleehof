<div class="row">
  <div class="col-md-12">
    <%= f.label :identifier, :class => 'control-label' %>
    <div class='controls'>
      <%= f.text_field :identifier, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    </div>

    <% error = @product.errors.include?(:name) %>
    <fieldset class='control-group <%= error ? 'has-error' : ''%>'>
      <%= f.label :name, :class => 'control-label' %>
      <div class='controls'>
        <%= f.text_field :name, :class => 'form-control input-xlarge input-with-feedback' %>
      </div>
    </fieldset>

    <% error = @product.errors.include?(:price) %>
    <fieldset class='control-group <%= error ? 'has-error' : ''%>'>
      <%= f.label :price, :class => 'control-label' %>
      <div class='input-group'>
        <%= f.text_field :price, value: @product.price_f, class: 'form-control input-xlarge input-with-feedback' %>
        <span class="input-group-addon">CHF</span>
      </div>
    </fieldset>


    <% error = @product.errors.include?(:track_stock) %>
    <fieldset class='control-group <%= error ? 'has-error' : ''%>'>
      <div class='controls'>
        <%= f.label :track_stock, :class => 'control-label' %>
        <%= f.check_box :track_stock %>
      </div>
    </fieldset>

    <% error = @product.errors.include?(:stock_quantity) %>
    <fieldset class='control-group <%= error ? 'has-error' : ''%>'>
      <%= f.label :stock_quantity, :class => 'control-label' %>
      <div class='controls'>
        <%= f.number_field :stock_quantity, :class => 'form-control input-xlarge input-with-feedback' %>
      </div>
    </fieldset>

    <% error = @product.errors.include?(:inventory_threshold_notice) %>
    <fieldset class='control-group <%= error ? 'has-error' : ''%>'>
      <%= f.label :inventory_threshold_notice, :class => 'control-label' %>
      <div class="input-group">
        <%= f.text_field :inventory_threshold_notice, class: 'form-control text-right' %>
        <span class="input-group-addon">Stk.</span>
      </div>
    </fieldset>

    <% error = @product.errors.include?(:inventory_threshold_warn) %>
    <fieldset class='control-group <%= error ? 'has-error' : ''%>'>
      <%= f.label :inventory_threshold_warn, :class => 'control-label' %>
      <div class="input-group">
        <%= f.text_field :inventory_threshold_warn, class: 'form-control text-right' %>
        <span class="input-group-addon">Stk.</span>
      </div>
    </fieldset>

  </div>
</div>

<div class="row top-buffer">
  <div class="col-md-6">
  <%= link_to pat(:cancel), url(:products, :index), :class => 'btn btn-danger' %>
  </div>
  <div class="col-md-6">
    <%= f.submit pat(:save), :class => 'btn btn-primary pull-right' %>
  </div>
</div>
